<div class="row">

    <div class="col -md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">

                    {{!-- ficha técnica --}}

                    <label for="">Ficha técnica</label>

                    <div class="form-group ">
                        <input type="text" name="title" class="form-control" placeholder="Título de la obra">
                    </div>

                    <div class="form-group">
                        <input type="text" name="name" class="form-control" placeholder="Nombre del artista">
                    </div>
                    <div class="form-group">
                        <input type="text" name="technique" class="form-control" placeholder="Técnica">
                    </div>
                    <div class="form-group">
                        <input type="text" name="size" class="form-control" placeholder="Dimensiones de la obra">
                    </div>
                    <div class="form-group">
                        <input type="text" name="date" class="form-control" placeholder="Fecha en la cual se elaboró la obra">
                    </div>
                   

                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01" class="custom-file-label">Elegir una obra</label>
                        </div>
                    </div>

                    <button class="btn btn-dark">
                        Subir Obra
                    </button>

                </form>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Título</th>
                    <th>Técnica</th>
                    
                    <th >Funcionalidades</th>
                </tr>
            </thead>



            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{title}}</td>

                    <td >{{technique}}</td>




                    <td style="display:flex; justify-content:flex-start ;">

                        <a href="{{imageURL}}" target="_blank" class="btn btn-dark" style="margin-right: 5px;" > Ver </a>

                        <form method="POST" action="/images/{{public_id}}?_method=DELETE">
                            <a class="btn btn-danger" onclick="parentNode.submit()" > Eliminar </a>
                        </form>
                    </td>

                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>
</div>